import java.util.Random;
import java.util.Scanner;

public class Lesson11 {
    static Scanner scan = new Scanner(System.in);
    static Random random = new Random();

    public static void main(String[] args) {
        int r1,r2,i1,i2,rand,setatmpt;
        System.out.println("Pick two numbers that'll be used in a range. (cannot be negative)");
        r1 = scan.nextInt();
        r2 = scan.nextInt();
        if (r1 < 0 || r2 < 0) {
            System.out.println("Don't use negative numbers!");
        } else {
            if (r1 > r2) {
                i1 = (r1 - r2) + 1;
                i2 = r2;
            } else {
                i1 = (r2 - r1) + 1;
                i2 = r1;
            }
            rand = random.nextInt(i1) + i2;
            System.out.println("Pick the number of attempts you want to use. (2 - 10)");
            setatmpt = scan.nextInt();
            if (setatmpt > 10 || setatmpt < 2) {
                System.out.println("Pick a number between 2 and 10 only.");
                return;
            }
            for (int i = 0; i < setatmpt; i++) {
                System.out.println("Try number: " + (i + 1));
                int guess = scan.nextInt();
                if (guess > rand) {
                    System.out.println("Guess is larger then random number.");
                } else if (guess < rand) {
                    System.out.println("Guess is smaller then random number.");
                } // I can't find out for the life of me how to make it if it's the last attempt and it's wrong then it says something else so you're going to have to live with it just telling you your wrong.
                else {
                    System.out.println("Correct guess! The number was: " + rand);
                    System.out.println("And the attempts left are: " + i);
                    break;
                }
            }
        }
    }
}
